<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:elevation="2dp">

    </View>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUserAvatar"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="-100dp"
        android:elevation="2dp"
        android:src="@drawable/avatar"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/padding_10">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/padding_18"
                android:drawableTop="@drawable/ic_account"
                android:drawableTint="@color/shimmer"
                android:text="@string/loading"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/padding_18"
                android:drawableTop="@drawable/ic_email"
                android:drawableTint="@color/shimmer"
                android:text="@string/loading"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/sharedKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/ic_key"
                android:drawableTint="@color/shimmer"
                android:text="@string/loading"
                android:textSize="22sp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnResetKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sharedKey"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@android:color/white"
                android:src="@drawable/ic_refresh" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/btnResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnResetKey"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/padding_18"
                android:textAlignment="center"
                android:text="@string/resetPassword"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>